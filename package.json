{
	"name": "@yorganci/npm-registry-api",
	"version": "0.0.1",
	"description": "Query the npm registry for packuments, manifests, packages and download counts",
	"license": "MIT",
	"author": {
		"name": "Atahan Yorganci",
		"url": "https://github.com/atahanyorganci"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/atahanyorganci/npm-registry.git"
	},
	"bugs": {
		"url": "https://github.com/atahanyorganci/npm-registry/issues"
	},
	"keywords": [
		"query",
		"registry",
		"npm",
		"client",
		"api",
		"packument",
		"package",
		"downloads",
		"search",
		"manifest",
		"typescript"
	],
	"sideEffects": false,
	"type": "module",
	"exports": {
		".": {
			"import": "./dist/index.mjs",
			"require": "./dist/index.cjs"
		},
		"./package.json": "./package.json"
	},
	"main": "./dist/index.cjs",
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"engines": {
		"node": ">=20"
	},
	"scripts": {
		"check": "tsc",
		"check:watch": "tsc --watch",
		"build": "unbuild",
		"attw": "attw --pack . --ignore-rules cjs-resolves-to-esm",
		"test": "vitest",
		"test:update-data": "bun run scripts/update-test-data.ts",
		"test:ci": "vitest run --coverage --bail 1",
		"format": "prettier --check .",
		"format:write": "prettier --write .",
		"pre-push": "bun install && bun run lint && bun run build && bun run test:ci && bun run attw",
		"release": "np --no-cleanup"
	},
	"dependencies": {
		"ofetch": "^1.3.4",
		"quick-lru": "^7.0.0",
		"zod": "^3.23.8",
		"zod-package-json": "^1.0.3"
	},
	"devDependencies": {
		"@arethetypeswrong/cli": "^0.15.3",
		"@types/bun": "^1.1.3",
		"@vitest/coverage-v8": "^1.6.0",
		"fflate": "^0.8.2",
		"np": "^10.0.5",
		"prettier": "^3.3.3",
		"prettier-plugin-organize-imports": "^4.0.0",
		"typescript": "^5.4.5",
		"unbuild": "^2.0.0",
		"vitest": "^1.6.0"
	}
}
