{
    "name": "query-registry",
    "description": "Query the npm registry",
    "author": "velut",
    "license": "MIT",
    "version": "0.1.0",
    "main": "dist/index.js",
    "typings": "dist/index.d.ts",
    "module": "dist/query-registry.esm.js",
    "files": [
        "dist",
        "src"
    ],
    "engines": {
        "node": ">=10"
    },
    "scripts": {
        "start": "tsdx watch --target node",
        "build": "tsdx build --target node",
        "test": "tsdx test",
        "test:cov": "tsdx test --coverage",
        "test:watch": "tsdx test --watchAll --coverage",
        "lint": "tsdx lint src test",
        "prepare": "tsdx build --target node",
        "pre-push": "yarn lint && yarn build && yarn test:cov"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/velut/node-query-registry"
    },
    "bugs": {
        "url": "https://github.com/velut/node-query-registry/issues"
    },
    "keywords": [
        "query",
        "registry",
        "npm",
        "client",
        "api",
        "packument",
        "package",
        "manifest",
        "typescript"
    ],
    "husky": {
        "hooks": {
            "pre-commit": "yarn lint",
            "pre-push": "yarn pre-push"
        }
    },
    "prettier": {
        "printWidth": 80,
        "tabWidth": 4,
        "semi": true,
        "singleQuote": true,
        "trailingComma": "es5",
        "arrowParens": "always"
    },
    "dependencies": {},
    "devDependencies": {
        "husky": "^4.2.5",
        "tsdx": "^0.13.2",
        "tslib": "^2.0.0",
        "typescript": "^3.9.6"
    },
    "peerDependencies": {}
}
